# Caddyfile for PrivFinOS

# Replace 'localhost' with your domain for production
{$DOMAIN:localhost} {
    # Enable automatic HTTPS (with Let's Encrypt in production)
    # For localhost, Caddy will use a self-signed certificate

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Enable XSS protection
        X-XSS-Protection "1; mode=block"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Remove server header
        -Server
    }

    # API routes
    handle /api/* {
        reverse_proxy api:3001 {
            # Strip /api prefix
            rewrite * /

            # Health checks
            health_uri /health
            health_interval 30s
            health_timeout 5s

            # Load balancing (for future scaling)
            lb_policy least_conn

            # Timeouts
            transport http {
                dial_timeout 5s
                response_header_timeout 30s
            }
        }
    }

    # Health endpoint (direct, no prefix stripping)
    handle /health {
        reverse_proxy api:3001
    }

    # Frontend (SPA)
    handle {
        reverse_proxy web:80 {
            # Health checks
            health_uri /
            health_interval 30s
            health_timeout 5s
        }
    }

    # Error handling
    handle_errors {
        @5xx expression `{err.status_code} >= 500 && {err.status_code} < 600`
        handle @5xx {
            respond "Service temporarily unavailable" 503
        }

        @4xx expression `{err.status_code} >= 400 && {err.status_code} < 500`
        handle @4xx {
            respond "Not found" 404
        }
    }

    # Logging
    log {
        output file /data/access.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
}

# Admin API (localhost only)
localhost:2019 {
    bind 127.0.0.1
}
